<%= semantic_form_for([:admin,@all_delegate], :html => { :class => 'form-horizontal' }) do |f| %>
	<%= f.error_messages %>

	<%= f.inputs do %>
    <div class="string control-group">
      <label class=" control-label" style="padding-top: 0;">
        <%= t('activerecord.attributes.all_delegate.first_name') %>
      </label>
      <div class="controls">
        <%= @all_delegate.first_name %>
      </div>
    </div>
		
		<p id="warning">
		  <%= t('.warning') %>
		</p>
		
		<%= f.input :started_at, :as => :string, :input_html => {:size => 20}, :hint => t('.start_date_hint')  %>
		<%= f.input :ended_at, :as => :string, :input_html => {:size => 20}, :hint => t('.end_date_hint')  %>

	<% end %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
	  <%= f.submit nil, :class => 'btn btn-warning', :type => :reset, :value => t('helpers.links.reset'), :name => :reset %>
	  <%= link_to t('helpers.links.cancel'), admin_all_delegates_path, :class => 'btn btn-mini btn-warning' %>
  </div>

<% end %>

