<%- model_class = User -%>
<% title t('.title') %>

<div id="login-form">

  <%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.input :password, :input_html => { :size => 39, :placeholder => model_class.human_attribute_name(:new_password) }, :label => false %>
    <%= f.input :password_confirmation, :input_html => { :size => 39, :placeholder => model_class.human_attribute_name(:new_password_confirmation) }, :label => false %>

    <div class="control-group">
	    <%= f.submit t('.submit'), :class => 'btn' %>
    </div>
  <% end %>

  <div class="control-group">
    <%- if controller_name != 'sessions' %>
	    <%= link_to t('helpers.links.sign_in'), new_session_path(resource_name, {:load_media => false}), :class => 'sign-in-link' %>
    <% end -%>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
	    <%= link_to t('helpers.links.sign_up'), new_registration_path(resource_name, {:load_media => false}), :class => 'sign-up-link' %>
    <% end -%>
  </div>

</div>
