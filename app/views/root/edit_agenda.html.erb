<% title t('.title') %>

<% if @agenda %>

<%= semantic_form_for @agenda, :url => edit_agenda_path(params[:id]), :method => :post do |f| %>
	<%= f.error_messages %>

  <div id="edit_form_heading">
    <p>
      <%= t('.agenda', :name => @agenda.official_law_title.present? ? @agenda.official_law_title : @agenda.name, 
          :date => l(@agenda.conference.start_date, :format => :no_zone)) %>
    </p>

  </div>

	<%= f.inputs do %>
	  <%= f.hidden_field :is_law, :value => true %>
		<%= f.input :official_law_title %>
		<%= f.input :law_title %>
		<%= f.input :law_description, :as => :text, :input_html => {:rows => 3, :style => 'min-width: 400px;'} %>

		<%= f.input :session_number, :as => :select, :collection => Agenda.session_list, :include_blank => true %>
		<%= f.input :registration_number %>

		<%= f.input :name %>
		<%= f.input :description, :as => :text, :input_html => {:rows => 3, :style => 'min-width: 400px;'} %>

    <% if @agenda.is_final_version? %>
		  <%= f.input :law_id, :input_html => {:size => 10} %>
		  <%= f.input :law_url, :as => :url %>
    <% end %>
	<% end %>

  <div>
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>

<% else %>

  <p>
    <%= t('.not_found') %>
  </p>

<% end %>
